generator client {
  provider = "prisma-client-js"
}

// Uncomment the following lines and comment out the SQLite datasource block above to use PostgreSQL
// Make sure to set the correct DATABASE_URL in your .env file
// After swapping run `yarn prisma:setup` from the root directory to migrate the database
//
// datasource db {
//   provider = "postgresql"
//   url      = env("DATABASE_URL")
// }
datasource db {
  provider = "sqlite"
  url      = "file:../src/storage/finetunellms.db"
}

model models {
  id            Int      @id @default(autoincrement())
  name          String
  size          Int // in Billion
  baseModel     Boolean
  jobId         Int? // created by which job
  createdAt     DateTime @default(now())
  lastUpdatedAt DateTime @default(now())
}

model chat_history {
  id            Int      @id @default(autoincrement())
  model_id      Int
  session_id    Int
  prompt        String
  response      String
  include       Boolean  @default(true)
  rating        Int?
  createdAt     DateTime @default(now())
  lastUpdatedAt DateTime @default(now())
}

model datasets {
  id            Int      @id @default(autoincrement())
  path          String?
  name          String
  config        String   @default("en") // can be varied
  split         String   @default("train") // train validation test
  size          Int // in byte
  source        String
  extension     String
  numRows       Int?
  createdAt     DateTime @default(now())
  lastUpdatedAt DateTime @default(now())
}

model jobs {
  id              Int      @id @default(autoincrement())
  taskId          String?
  name            String
  userId          Int?
  baseModel       String
  datasetName     String
  trainingMethod  String
  status          String   @default("running")
  hyperparameters String // sqlite doesn't support json so we stringify before persisting
  createdAt       DateTime @default(now())
  lastUpdatedAt   DateTime @default(now())
}
