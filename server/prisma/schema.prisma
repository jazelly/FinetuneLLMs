model models {
  id            Int      @id @default(autoincrement())
  name          String
  size          Int // in Billion
  baseModel     Boolean
  jobId         Int? // created by which job
  createdAt     DateTime @default(now())
  lastUpdatedAt DateTime @default(now())
}

model workflows {
  id         String           @id @default(uuid())
  name       String
  nodes      workflow_nodes[]
  edges      workflow_edges[]
  created_at DateTime         @default(now())
  updated_at DateTime         @default(now())
}

model workflow_nodes {
  id          String    @id @default(uuid())
  title       String
  desc        String
  type        String
  workflow_id String
  workflow    workflows @relation(fields: [workflow_id], references: [id])
}

model workflow_edges {
  id          String    @id @default(uuid())
  in_degree   String
  out_degree  String
  workflow_id String
  workflow    workflows @relation(fields: [workflow_id], references: [id])
}

model chat_history {
  id            Int      @id @default(autoincrement())
  model_id      Int
  session_id    Int
  prompt        String
  response      String
  include       Boolean  @default(true)
  rating        Int?
  createdAt     DateTime @default(now())
  lastUpdatedAt DateTime @default(now())
}

model datasets {
  id            Int      @id @default(autoincrement())
  path          String?
  name          String
  config        String   @default("en") // can be varied
  split         String   @default("train") // train validation test
  size          Int // in byte
  source        String
  extension     String
  numRows       Int?
  createdAt     DateTime @default(now())
  lastUpdatedAt DateTime @default(now())
}

model jobs {
  id              Int      @id @default(autoincrement())
  taskId          String?
  name            String
  userId          Int?
  baseModel       String
  datasetName     String
  trainingMethod  String
  status          String   @default("running")
  hyperparameters String // sqlite doesn't support json so we stringify before persisting
  createdAt       DateTime @default(now())
  lastUpdatedAt   DateTime @default(now())
}
